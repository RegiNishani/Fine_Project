<!-- Bootstrap Header Starts Here -->
<header class="position-relative shadow-sm bg-light align-items-end" style="background: beige; text-align: right;">
    <div class="container-fluid">
        <div class="row justify-content-between align-items-center">
            <div class="col-auto">
                <% if user_signed_in? %>
                <div style="height: 40px; margin-top: 15px;">
                  <%= link_to root_path, :class=>"btn btn-info me-2" do %>
                       <i class="fa fa-user me-2"></i> Notifications
                   <% end %>

                  <%= link_to vehicles_path, :class=>"dropdown-item text-14 pt-2 pb-2 border-top border-bottom border-color-silver" do %>
                       <i class="fa fa-user me-2"></i> Vehicles List |
                   <% end %>

                   <%= link_to new_vehicle_path, :class=>"dropdown-item text-14 pt-2 pb-2 border-top border-bottom border-color-silver" do %>
                       <i class="fa fa-user me-2"></i> Add New Vehicle |
                   <% end %>

                   <%= link_to fines_path, :class=>"dropdown-item text-14 pt-2 pb-2 border-top border-bottom border-color-silver" do %>
                       <i class="fa fa-user me-2"></i> Fines List |
                   <% end %>
                   <%= link_to edit_user_registration_path, :class=>"dropdown-item text-14 pt-2 pb-2 border-top border-bottom border-color-silver" do %>
                       <i class="fa fa-user me-2"></i> My Account |
                   <% end %>
                   <%= link_to destroy_user_session_path, :method => :delete, :class=>"dropdown-item text-14 pt-2 pb-2" do %>
                       <i class="fa fa-sign-out me-2" aria-hidden="true"></i> <%= current_user.name %> Sign Out
                   <% end %>
                </div>
                <% else %>
                   <%= link_to root_path, :class=>"btn btn-info me-2" do %>
                       <i class="fa fa-user me-2"></i> Notifications
                   <% end %>
                    <%= link_to new_user_registration_path, class: "btn btn-primary me-2" do %>
                        <i class="fa fa-user me-2"></i> Register
                    <% end %>
                    <%= link_to new_user_session_path, class: "btn btn-success" do  %>
                        <i class="fa fa-sign-in me-2" aria-hidden="true"></i> Sign in
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</header>
<!-- Bootstrap Header Ends Here -->
